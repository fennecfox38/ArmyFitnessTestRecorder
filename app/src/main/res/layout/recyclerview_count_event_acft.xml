<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewholder"
            type="mil.army.fitnesstest.recorder.acft.ACFTEventRecyclerAdapter.CountViewHolder" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:elevation="5dp"
        android:background="@color/cardview_background">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="24sp"
            android:text="@{viewholder.event.title}"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/editText_raw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/txt_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="end"
            android:textColor="@{viewholder.getPassedColor(viewholder.event.level.isPassed())}"
            android:textSize="20sp"
            android:text="@{viewholder.event.level.name()}"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/editText_raw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="@{viewholder.event}"
            android:afterTextChanged="@{viewholder::afterTextChanged}"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@+id/txt_title"
            app:layout_constraintBottom_toTopOf="@+id/btn_minus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txt_unit"/>
        <TextView
            android:id="@+id/txt_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@{viewholder.event.unit}"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText_raw"
            app:layout_constraintStart_toEndOf="@+id/editText_raw"
            app:layout_constraintEnd_toStartOf="@+id/editText_sco"/>
        <EditText
            android:id="@+id/editText_sco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="@{String.valueOf(viewholder.event.sco)}"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_unit"
            app:layout_constraintStart_toEndOf="@+id/txt_unit"
            app:layout_constraintEnd_toStartOf="@+id/txt_sco"/>
        <TextView
            android:id="@+id/txt_sco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/Points"
            app:layout_constraintBaseline_toBaselineOf="@+id/editText_sco"
            app:layout_constraintStart_toEndOf="@+id/editText_sco"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:id="@+id/btn_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remove"
            android:onClick="@{viewholder::onAdjustBtnClick}"
            app:layout_constraintTop_toBottomOf="@+id/editText_raw"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/seekbar"/>
        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:min="0"
            android:max="@{viewholder.event.max}"
            android:progress="@{viewholder.event.raw}"
            android:onProgressChanged="@{viewholder::onProgressChanged}"
            app:layout_constraintTop_toTopOf="@+id/btn_minus"
            app:layout_constraintBottom_toBottomOf="@+id/btn_minus"
            app:layout_constraintStart_toEndOf="@+id/btn_minus"
            app:layout_constraintEnd_toStartOf="@+id/btn_plus"/>
        <ImageButton
            android:id="@+id/btn_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            android:onClick="@{viewholder::onAdjustBtnClick}"
            app:layout_constraintTop_toTopOf="@+id/seekbar"
            app:layout_constraintBottom_toBottomOf="@+id/seekbar"
            app:layout_constraintStart_toEndOf="@+id/seekbar"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
